<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <menuitem id="main_menu_emploi" name="Gestion Scolarite(Emploi)" />

        <record id="erp_emploi_form_view" model="ir.ui.view">
            <field name="name">erp.emploi.form</field>
            <field name="model">erp.emploi</field>
            <field name="arch" type="xml">
                <form string="emploi" version="7.0">
                    <sheet>
                        <notebook>
                            <page string="Informations emploi">
                                <group>
                                    <field name="file_name" invisible = "1" />
                                    <field name="emploi" filename = "file_name"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="erp.emploi_tree" model="ir.ui.view">
            <field name="name">erp.emploi.tree</field>
            <field name="model">erp.emploi</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Infos emploi">
                    <field name="emploi" />
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_emploi_seq">
            <field name="name">Emploi</field>
            <field name="res_model">erp.emploi</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Emploi" id="section_main_menu_emploi" parent="main_menu_etudiant" />
        <menuitem name="Emploi" id="real_menu_emploi" parent="section_main_menu_emploi" action="action_emploi_seq" />
    </data>
</openerp>
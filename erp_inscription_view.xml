<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <menuitem id="main_menu_inscription" name="Gestion Scolarite(Inscription)" />

        <record id="erp_inscription_form_view" model="ir.ui.view">
            <field name="name">erp.inscription.form</field>
            <field name="model">erp.inscription</field>
            <field name="arch" type="xml">
                <form string="inscription" version="7.0">
                    <sheet>
                        <notebook>
                            <page string="Informations inscription">
                                <group>
                                    <field name="date_inscription" />
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="erp.inscription_tree" model="ir.ui.view">
            <field name="name">erp.inscription.tree</field>
            <field name="model">erp.inscription</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Infos inscription">
                    <field name="date_inscription" />
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_inscription_seq">
            <field name="name">Inscriptions</field>
            <field name="res_model">erp.inscription</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Inscriptions" id="section_main_menu_inscription" parent="main_menu_etudiant" />
        <menuitem name="Inscriptions" id="real_menu_inscription" parent="section_main_menu_inscription" action="action_inscription_seq" />
    </data>
</openerp>
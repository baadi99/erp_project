<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <menuitem id="main_menu_announce" name="Gestion Scolarite(Announces)" />

        <record id="erp_announce_form_view" model="ir.ui.view">
            <field name="name">erp.announce.form</field>
            <field name="model">erp.announce</field>
            <field name="arch" type="xml">
                <form string="announce" version="7.0">
                    <sheet>
                        <notebook>
                            <page string="Informations announce">
                                <group>
                                    <field name="file_name" invisible="1"/>
                                    <field name="announce_file" filename="file_name" />
                                    <field name="type_announce" />
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="erp.announce_tree" model="ir.ui.view">
            <field name="name">erp.announce.tree</field>
            <field name="model">erp.announce</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Infos announce">
                    <field name="announce_file" />
                    <field name="type_announce" />
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_announce_seq">
            <field name="name">Announce</field>
            <field name="res_model">erp.announce</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Announces" id="section_main_menu_announce" parent="main_menu_student" />
        <menuitem name="Announces" id="real_menu_announce" parent="section_main_menu_announce" action="action_announce_seq" />
    </data>
</openerp>